{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Splendor GUI",
            "type": "debugpy",
            "request": "launch",
            "module": "splendor.gui",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "RL TUI (single process)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/rl_tui.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "--reward", "shaped",
                "--arch", "gpu-heavy"
            ]
        },
        {
            "name": "Run pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-v"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Web Backend (FastAPI)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.main:app",
                "--reload",
                "--port", "8000"
            ],
            "cwd": "${workspaceFolder}/web",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Web Frontend (Vite)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/web/frontend",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["dev"],
            "console": "integratedTerminal",
            "preLaunchTask": "Ensure Web Frontend Ready"
        },
        {
            "name": "Playwright Tests (UI)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/web/e2e",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": ["test:ui"],
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Web App (Backend + Frontend)",
            "configurations": ["Web Backend (FastAPI)", "Web Frontend (Vite)"],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Web",
                "order": 1
            }
        }
    ]
}
