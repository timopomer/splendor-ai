{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Splendor GUI",
            "type": "debugpy",
            "request": "launch",
            "module": "splendor.gui",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "RL TUI (single process)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/rl_tui.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "--reward", "shaped",
                "--arch", "gpu-heavy"
            ]
        },
        {
            "name": "Run pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-v"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}

